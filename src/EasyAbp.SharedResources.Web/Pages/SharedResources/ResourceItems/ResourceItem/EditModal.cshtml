@page
@inherits EasyAbp.SharedResources.Web.Pages.SharedResourcesPage
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EasyAbp.SharedResources.Web.Pages.SharedResources.ResourceItems.ResourceItem.EditModalModel
@{
    Layout = null;
}
<abp-dynamic-form abp-model="ResourceItem" data-ajaxForm="true" asp-page="EditModal">
    <abp-modal>
        <abp-modal-header title="@L["EditResourceItem"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>